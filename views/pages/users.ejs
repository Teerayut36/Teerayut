<% include ../partials/header %>
 <div class="jumbotron">
 
  <br>
 <table class="table">
     <thead>
         <tr class="bg-secondary">
             <th>ID</th>
             <th>Email</th>
             <th>Password</th>
            <th><a name="" id="" class="btn btn-success" href="/insertuser" role="button">Add New</a></th>
         </tr>
     </thead>
     <tbody id="myTable">
     <% users.forEach(function(user){ %>
         <tr>
             <td scope="row"><%=user.id %></td>
             <td><%=user.email %></td>
             <td><%=user.password %></td>
             <td><a name="" id="" class="btn btn-dark" href="/users/<%=user.id %>" role="button">Edit</a>
             </td>
         </tr>
         <% }); %>
     </tbody>
 </table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
