<% include ../partials/header %>
<div class="jumbotron">

  <br>
 <table class="table">
     <thead>
         <tr class="bg-secondary">
             <th>ID</th>
             <th>Title</th>
             <th>Price</th>
             <th><a name="" id="" class="btn btn-success" href="/insert" role="button">Add New</a></th>
</tr>
     </thead>
     <tbody id="myTable">
     <% products.forEach(function(product){ %>
         <tr>
             <td scope="row"><%=product.id %></td>
             <td><%=product.title %></td>
             <td>$<%=product.price %></td>
             <td><a name="" id="" class="btn btn-dark" href="/products/<%=product.id %>" role="button">Edit</a>
             </td>
            </tr>
         <% }); %>
     </tbody>
 </table>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
